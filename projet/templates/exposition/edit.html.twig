{% extends 'nav_foot_admin.html.twig' %}

{% block title %}Edit Exposition{% endblock %}

{% block edit_expo %}
<div class="d-flex justify-content-center container mt-5">
    <div class="card p-3 bg-white">
        <div class="about-product text-center mt-2">
            <h4>Edit Exposition</h4>
            {% if exposition.image %}
            
            <img id="preview" class="exposition-image img-fluid" src="{{ path('user_images', {'imageName': exposition.image}) }}" alt="Current Image" width="300">
        {% else %}
            <img id="preview" class="exposition-image img-fluid"  alt="Current Image" width="300" >
        {% endif %}
        
        </div>
        <div class="stats mt-2">
            {{ include('exposition/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
        <div class="d-flex justify-content-between total font-weight-bold mt-4">
            <a href="{{ path('app_exposition_index') }}" class="btn btn-primary">Back to list</a>
            {{ include('exposition/_delete_form.html.twig') }}
        </div>
    </div>
</div>


<script>
    document.querySelector('input[type="file"]').addEventListener('change', function(event) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.querySelector('#preview').src = e.target.result;
            document.querySelector('#preview').style.display = 'exposition-image img-fluid';
        };
        reader.readAsDataURL(event.target.files[0]);
    });
    
    </script>
    
    
{% endblock %}
