{% extends 'nav_foot_client.html.twig' %} 
{% block title %}Exposition Display{% endblock %}
{% block content %}
<div class="container mt-100">
    <div class="container mt-100 text-center">
        <div class="container mt-100">
            <input type="text" id="search-input" onkeyup="search()" class="search-input" placeholder="Rechercher par nom">
          </div>
          
      </div>
      
<br>      
    <div id="expositions" class="row">
        {% if expositions|length > 0 %}
            {% for exposition in expositions %}
                <div class="col-md-4 col-sm-6 mb-30">
                    <div class="card h-100 d-flex flex-column">
                        <a class="card-img-tiles" href="#" data-abc="true">
                            <div class="inner">
                                <div class="main-img">
                                    {% if exposition.image %}
                                        <img src="{{ path('user_images', {'imageName': exposition.image}) }}" alt="{{ exposition.nom }}" class="exposition-image" style="width: 100%; height: auto;">
                                    {% else %}
                                        <img src="placeholder.jpg" alt="Placeholder Image" class="exposition-image" style="width: 100%; height: auto;">
                                    {% endif %}
                                </div>
                            </div>
                        </a>
                        <div class="card-body text-center d-flex flex-column">
                            <h4 class="card-title">{{ exposition.nom }}</h4>
                            <p class="text-muted">
                                <br>Theme: {{ exposition.theme }} <br>
                                {% if exposition.dateDebut %}
                                    Date debut  {{ exposition.dateDebut|date('Y-m-d ')}}à  {{ exposition.heureDebut|date('H:i') }} <br>
                                {% endif %}
                                {% if exposition.dateFin %}
                                    Date fin {{ exposition.dateFin|date('Y-m-d ') }}à  {{ exposition.heureFin|date('H:i') }}
                                {% endif %}
                            </p>
                            <div class="mt-auto">
                                <a href="{{ path('app_client_show', {'idExposition': exposition.idExposition}) }}" 
                                   class="btn item-btn btn-primary display-7">Voir Détails</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>No records found</p>
        {% endif %}
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item {% if knp_pagination.currentPageNumber == 1 %}disabled{% endif %}">
            <a class="page-link" href="{{ path('app_client_getallExpo', {'page': knp_pagination.currentPageNumber - 1 }) }}" tabindex="-1"> < </a>
          </li>
          {% for page in 1..knp_pagination.pageCount %}
          <li class="page-item {% if page == knp_pagination.currentPageNumber %}active{% endif %}">
            <a class="page-link" href="{{ path('app_client_getallExpo', {'page': page }) }}">{{ page }}</a>
          </li>
          {% endfor %}
          <li class="page-item {% if knp_pagination.currentPageNumber == knp_pagination.pageCount %}disabled{% endif %}">
            <a class="page-link" href="{{ path('app_client_getallExpo', {'page': knp_pagination.currentPageNumber + 1 }) }}"> > </a>
          </li>
        </ul>
    </nav>
</div>
<script>
    function search() {
        
        let query = document.getElementById('search-input').value;
        fetch(`/client/search?q=${query}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            let div = document.getElementById('expositions');
            div.innerHTML = '';

            data.forEach(exposition => {
                    
                let expositionDiv = `
                    <div class="col-md-4 col-sm-6 mb-30">
                        <div class="card h-100 d-flex flex-column">
                            <a class="card-img-tiles" href="#" data-abc="true">
                                <div class="inner">
                                    <div class="main-img">
                                        <img src="/user-images/${exposition.image}" class="exposition-image" onError="handleImageError(this)" style="width: 100%; height: auto;">
                                    </div>
                            </a>
                            <div class="card-body text-center d-flex flex-column">
                                <h4 class="card-title">${exposition.nom}</h4>
                                <p class="text-muted">
                                    <br>Theme: ${exposition.theme} <br>
                                    Date debut: ${exposition.dateDebut} à ${exposition.heureDebut} <br>
                                    Date fin: ${exposition.dateFin} à ${exposition.heureFin}
                                </p>
                                <div class="mt-auto">
                                    <a href="${exposition.idExposition}" class="btn item-btn btn-primary display-7">Voir Détails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                div.innerHTML += expositionDiv;
            });
        })
        .catch(error => console.error('Error:', error));
    }
</script>
{% endblock %}

