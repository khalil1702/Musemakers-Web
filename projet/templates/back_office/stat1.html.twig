{% extends 'nav_foot_admin.html.twig' %}

{% block title %}Top Reserved Expositions{% endblock %}

{% block stat1 %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <h4 class="card-title">Top Reserved Expositions</h4>
            <canvas id="top-reserved-expositions-chart"></canvas>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Récupérer les données transmises depuis le contrôleur
        var topReservedExpositions = {{ topReservedExpositions | json_encode | raw }};

        // Extraire les données pour le graphique
        var labels = topReservedExpositions.map(item => item.exposition.nom);
        var data = topReservedExpositions.map(item => item.reservationsCount);

        // Configuration du graphique
        var ctx = document.getElementById('top-reserved-expositions-chart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nombre de réservations',
                    data: data,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    });
</script>
{% endblock %}
