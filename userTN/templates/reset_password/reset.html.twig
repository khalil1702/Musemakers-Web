{% extends 'navfootclient.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">Change Password</div>
                    <div class="card-body">
                        {{ form_start(changePasswordForm, {'attr': {'class': 'form'}}) }}
                            <div class="form-group">
                                {{ form_label(changePasswordForm.plainPassword.first, 'New password', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(changePasswordForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(changePasswordForm.plainPassword.first) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(changePasswordForm.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(changePasswordForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(changePasswordForm.plainPassword.second) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Change password</button>
                        {{ form_end(changePasswordForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
