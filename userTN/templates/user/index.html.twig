{% extends 'base2.html.twig' %}

{% block title %}Artiste index{% endblock %}

{% block body %}
    <h1>user index</h1>
     <div class="form-group">
    <label for="searchInput">Search:</label>
    <input type="text" class="form-control" id="searchInput" placeholder="Enter search term">
</div>


    <table class="table">
        <thead>
            <tr>
                <th>NomUser</th>
                <th>PrenomUser</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>NumTel</th>
                <th>DateDeNaissance</th>
                <th>Cartepro</th>
                <th>Status</th>
                <th>Sexe</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if user.role == 'ROLE_USER' %}
                <tr>
                    <td>{{ user.nomUser }}</td>
                    <td>{{ user.prenomUser }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.mdp }}</td>
                    <td>{{ user.numTel }}</td>
                    <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d') : '' }}</td>
                    <td>{{ user.cartepro }}</td>
                    <td>{{ user.status }}</td>
                    <td>{{ user.sexe }}</td>
<td>
    {% if user.image %}
        <img src="{{ path('user_images', {'imageName': user.image}) }}" alt="User image">
    {% else %}
        <img src="{{ asset('images/default.png') }}" alt="Default image">
    {% endif %}
</td>
<td>
    <a href="{{ path('app_user_show', {'idUser': user.idUser}) }}" class="btn btn-primary">Show</a>
    <a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}" class="btn btn-secondary">Edit</a>
</td>

                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="11">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('app_user_new') }}" class="btn btn-success">Create new</a>
</script>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById('searchInput');
        const rows = document.querySelectorAll('tbody tr');

        searchInput.addEventListener('input', function() {
            const searchTerm = searchInput.value.toLowerCase();

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                let found = false;

                cells.forEach(cell => {
                    if (cell.textContent.toLowerCase().includes(searchTerm)) {
                        found = true;
                    }
                });

                if (found) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script> 
{% endblock %}
