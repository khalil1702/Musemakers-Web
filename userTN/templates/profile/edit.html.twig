{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1>Edit Profile</h1>

    {{ form_start(form) }}
        {{ form_row(form.nomUser) }}
        {{ form_row(form.prenomUser) }}
        {{ form_row(form.email) }}
        {{ form_row(form.mdp) }}
        {{ form_row(form.numTel) }}

        <button type="submit" class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}
{% endblock %}
