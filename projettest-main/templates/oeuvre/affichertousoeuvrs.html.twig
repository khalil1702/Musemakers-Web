{% extends 'nav_foot_client.html.twig' %}

    
{% block affichagetousoeuvreclient %}

{% block stylesheets %}
   
    {{ parent() }}
     <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />

    <style>
      .oeuvre-carousel {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            -webkit-overflow-scrolling: touch;
        }
    .oeuvre-card {
    flex: 0 0 auto; /* Chaque carte garde sa largeur sans grandir ou rétrécir */
    margin-right: 10px; /* Espacement entre les cartes */
    scroll-snap-align: start;
    background-color: transparent;
    width: 400px;
    height: 400px;
    perspective: 1000px;
}


        .oeuvre-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            background-color: #2980b9; /* Couleur de fond pour la carte arrière */
            color: white; /* Couleur du texte pour la carte arrière */
        }

        .oeuvre-card:hover .oeuvre-card-inner {
            transform: rotateY(180deg);
        }

        .oeuvre-card-front, .oeuvre-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
        }

        .oeuvre-card-front {
            background-color: #bbb;
            color: black;
        }

    .oeuvre-card-back {
    background-color: #E0E0E0; /* Couleur fumée */
    color: #333333;/* Couleur du texte */
    transform: rotateY(180deg);
}


        .oeuvre-card img {
         max-height: 300px; /* Hauteur fixe de l'image */
          max-width: 100%; /* Largeur maximale de l'image */
            object-fit: cover; /* Ajuster l'image pour remplir le conteneur tout en préservant son aspect */
             position: absolute; /* Position absolue pour utiliser les propriétés top, bottom, left, right */
              top: 50%; /* Place le haut de l'image au milieu de la carte */
            left: 50%; /* Place la gauche de l'image au milieu de la carte */
             transform: translate(-50%, -50%); /* Déplace l'image de moitié de sa taille vers le haut et vers la gauche pour la centrer *
        }
    </style>
{% endblock %}

 <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="row justify-content-center text-center">
                <div class="col-md-12 d-flex align-items-end">
                    <div class="mr-3 mt-2">
                        <input type="text" id="search-input" onkeyup="search()" class="form-control form-control-sm" placeholder="taper le nom......." >
                    </div>
                    <form action="{{ path('oeuvre_sort') }}" method="get" class="w-100 d-flex">
                        <div class="mr-3 mt-2">
                            <label for="sort_by">Trier par :</label>
                            <select name="sort_by" id="sort_by" class="form-control form-control-sm">
                                <option value="">-- Sélectionnez --</option>
                                <option value="nomOeuvre">Nom</option>
                                <option value="categorieOeuvre">Catégorie</option>
                                <option value="prixOeuvre">Prix</option>
                            </select>
                        </div>

                        <div class="mr-3 mt-2">
                            <label for="sort_order">Ordre :</label>
                            <select name="sort_order" id="sort_order" class="form-control form-control-sm" >
                                <option value="">-- Sélectionnez --</option>
                                <option value="ASC">Croissant</option>
                                <option value="DESC">Décroissant</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3" >Trier</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<div style="margin-bottom: 100px;"></div>

<div id="oeuvres" class="oeuvre-carousel">
    {% if oeuvres is defined %}
        {% if oeuvres %}
            {% for oeuvre in oeuvres %}
                <div class="oeuvre-card-container">
                    <div class="oeuvre-card">
                        <div class="oeuvre-card-inner">
                            <div class="oeuvre-card-front">
                                <img src="{{ path('user_images', {'imageName': oeuvre.image}) }}" alt="{{ oeuvre.nomOeuvre }}">
                            </div>
                            <div class="oeuvre-card-back">
                                <h1>{{ oeuvre.nomOeuvre }}</h1>
                                <p>DESCRIPTION: {{ oeuvre.description }}</p>
                                <p>PRIX: {{ oeuvre.prixOeuvre }}</p>
                                <p>CATEGORIE: {{ oeuvre.categorieOeuvre }}</p> 
                                <p>Date Creation: {{ oeuvre.datecreation ? oeuvre.datecreation|date('Y-m-d') : '' }}</p> 
                                 
                                  <p>  {{ averageRatings[oeuvre.idOeuvre]|rating }}</p>
   
   

                            </div>
                        </div>
                    </div>
                    
                <div>    <a href="{{ path('app_avis_new', {'idOeuvre': oeuvre.idOeuvre}) }}" class="btn btn-primary mt-3"> votre avis</a> </div>
                </div>
            {% endfor %}
 
        {% else %}
            <p>Aucun résultat trouvé.</p>
        {% endif %}
    {% endif %}
</div>


     
       
{% block javascripts %}
    {{ parent() }}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
  
{% endblock %}
 
     
<script>
    
  

    // Fonction de recherche AJAX
    function search() {
        let query = document.getElementById('search-input').value;
        fetch(`/oeuvreclient/search?q=${query}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.text())
        .then(data => {
            let div = document.getElementById('oeuvres');
            div.innerHTML = data;
            // Réinitialiser le plugin StarRating après la mise à jour du contenu
            $('.rating').rating();
        })
        .catch(error => console.error('Error:', error));
    }
</script>



{% endblock %}